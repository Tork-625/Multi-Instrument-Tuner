<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape android:shape="oval">
                    <solid android:color="#101010"/>
                </shape>
            </item>

            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="65dp"
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:startColor="#20000000"
                        android:endColor="#00000000"/>
                </shape>
            </item>

            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="270"
                        android:startColor="#262626"
                        android:centerColor="#2f2f2f"
                        android:endColor="#343434"/>
                    <stroke android:width="1dp" android:color="#202020"/>
                </shape>
            </item>

            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="55dp"
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:startColor="#3a3a3a"
                        android:centerColor="#1c1c1c"
                        android:endColor="#121212"/>
                    <padding android:bottom="1dp"/>
                    <stroke android:width="1dp" android:color="#161616"/>
                </shape>
            </item>

            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="30dp"
                        android:centerX="0.5"
                        android:centerY="0.45"
                        android:startColor="#0cffffff"
                        android:endColor="#00ffffff"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>

            <item>
                <shape android:shape="oval">
                    <solid android:color="#161616"/>
                </shape>
            </item>

            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="75dp"
                        android:startColor="#22000000"
                        android:endColor="#00000000"
                        android:centerX="0.5"
                        android:centerY="0.5"/>
                </shape>
            </item>

            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="oval">
                    <solid android:color="#262626"/>
                </shape>
            </item>

            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#2e2e2e"/>
                </shape>
            </item>

            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="oval">
                    <solid android:color="#222222"/>
                </shape>
            </item>

            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="270"
                        android:startColor="#404040"
                        android:centerColor="#383838"
                        android:endColor="#343434"/>
                    <stroke android:width="1dp" android:color="#262626"/>
                    <gradient
                        android:type="radial"
                        android:gradientRadius="45dp"
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:startColor="#0c000000"
                        android:endColor="#00000000"/>
                    <padding android:bottom="1dp"/>
                </shape>
            </item>

            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:startColor="#40ffffff"
                        android:endColor="#00ffffff"
                        android:centerX="0.4"
                        android:centerY="0.4"/>
                </shape>
            </item>

            <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="30dp"
                        android:startColor="#26ffffff"
                        android:endColor="#00ffffff"
                        android:centerX="0.65"
                        android:centerY="0.25"/>
                </shape>
            </item>

        </layer-list>
    </item>

</selector>
