<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <corners android:radius="5dp" />
          <solid android:color="#0e0e0e" />
        </shape>
      </item>

      <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
          <corners android:radius="3dp" />
          <gradient
              android:type="radial"
              android:gradientRadius="35dp"
              android:startColor="#4000ff00"
              android:endColor="#0000ff00"
              android:centerX="0.5"
              android:centerY="0.5" />
        </shape>
      </item>

      <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="1dp">
        <shape android:shape="rectangle">
          <corners android:radius="4dp" />
          <gradient
              android:startColor="#2e2e2e"
              android:centerColor="#2d2d2d"
              android:endColor="#2a2a2a"
              android:angle="270" />
          <stroke android:width="1dp" android:color="#222222" />
        </shape>
      </item>

      <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="1dp">
        <shape android:shape="rectangle">
          <corners android:radius="4dp" />
          <gradient
              android:startColor="#272727"
              android:endColor="#2a2a2a"
              android:angle="270" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item>
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <corners android:radius="6dp" />
          <solid android:color="#0e0e0e" />
        </shape>
      </item>

      <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
          <corners android:radius="2dp" />
          <gradient
              android:type="radial"
              android:gradientRadius="40dp"
              android:startColor="#3800ff00"
              android:endColor="#0000ff00"
              android:centerX="0.5"
              android:centerY="0.5" />
        </shape>
      </item>

      <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="0dp">
        <shape android:shape="rectangle">
          <corners android:radius="6dp" />
          <solid android:color="#141414" />
        </shape>
      </item>

      <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="0dp">
        <shape android:shape="rectangle">
          <corners android:radius="5dp" />
          <solid android:color="#1a1a1a" />
        </shape>
      </item>

      <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
          <corners android:radius="5dp" />
          <solid android:color="#202020" />
        </shape>
      </item>

      <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="0dp">
        <shape android:shape="rectangle">
          <corners android:radius="4dp" />
          <solid android:color="#252525" />
        </shape>
      </item>

      <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="1dp">
        <shape android:shape="rectangle">
          <corners android:radius="4dp" />
          <gradient
              android:startColor="#333333"
              android:centerColor="#2e2e2e"
              android:endColor="#2a2a2a"
              android:angle="270" />
          <stroke android:width="1dp" android:color="#222222" />
        </shape>
      </item>

      <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="1dp">
        <shape android:shape="rectangle">
          <corners android:radius="4dp" />
          <gradient
              android:type="radial"
              android:gradientRadius="70dp"
              android:startColor="#20444444"
              android:endColor="#00343434"
              android:centerX="0.5"
              android:centerY="0.5" />
        </shape>
      </item>

      <item android:top="6dp" android:left="5dp" android:right="25dp" android:bottom="2dp">
        <shape android:shape="rectangle">
          <corners android:topLeftRadius="3dp" android:bottomLeftRadius="3dp" />
          <gradient
              android:startColor="#383838"
              android:endColor="#2e2e2e"
              android:angle="0" />
        </shape>
      </item>

      <item android:top="6dp" android:left="25dp" android:right="5dp" android:bottom="2dp">
        <shape android:shape="rectangle">
          <corners android:topRightRadius="3dp" android:bottomRightRadius="3dp" />
          <gradient
              android:startColor="#2e2e2e"
              android:endColor="#282828"
              android:angle="0" />
        </shape>
      </item>

      <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="7dp">
        <shape android:shape="rectangle">
          <corners android:topLeftRadius="3dp" android:topRightRadius="3dp" />
          <gradient
              android:startColor="#3e3e3e"
              android:endColor="#333333"
              android:angle="270"
              android:centerY="0.3" />
        </shape>
      </item>

      <item android:top="9dp" android:left="5dp" android:right="5dp" android:bottom="1dp">
        <shape android:shape="rectangle">
          <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
          <gradient
              android:startColor="#2a2a2a"
              android:endColor="#252525"
              android:angle="270" />
        </shape>
      </item>

      <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
          <corners android:radius="4dp" />
          <gradient
              android:type="radial"
              android:gradientRadius="60dp"
              android:startColor="#20ffffff"
              android:endColor="#00ffffff"
              android:centerX="0.7"
              android:centerY="0.3" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>